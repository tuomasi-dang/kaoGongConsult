<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cl.dao.KaoyanziliaoDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.cl.entity.KaoyanziliaoEntity" id="kaoyanziliaoMap">
        <result property="ziliaomingcheng" column="ziliaomingcheng"/>
        <result property="ziliaofenlei" column="ziliaofenlei"/>
        <result property="fengmian" column="fengmian"/>
        <result property="shangchuanshijian" column="shangchuanshijian"/>
        <result property="ziliaoxiangqing" column="ziliaoxiangqing"/>
        <result property="thumbsupNumber" column="thumbsup_number"/>
        <result property="crazilyNumber" column="crazily_number"/>
        <result property="storeupNumber" column="storeup_number"/>
        <result property="discussNumber" column="discuss_number"/>
        <result property="onelimittimes" column="onelimittimes"/>
        <result property="alllimittimes" column="alllimittimes"/>
        <result property="price" column="price"/>
        <result property="clicktime" column="clicktime"/>
    </resultMap>

    <select id="selectListView"
		resultType="com.cl.entity.view.KaoyanziliaoView" >

		SELECT  kaoyanziliao.* FROM kaoyanziliao  kaoyanziliao 	        
        <where>${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.cl.entity.view.KaoyanziliaoView" >
		SELECT * FROM kaoyanziliao  kaoyanziliao <where>${ew.sqlSegment}</where>
	</select>



    <select id="selectValue" resultType="map" >
        SELECT ${params.xColumn}, ROUND(sum(${params.yColumn}),1) total FROM kaoyanziliao
        <where>${ew.sqlSegment}</where>
        group by ${params.xColumn}
        limit 10
    </select>

    <select id="selectTimeStatValue" resultType="map" >
        <if test = 'params.timeStatType == "日"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m-%d') ${params.xColumn}, sum(${params.yColumn}) total FROM kaoyanziliao
                <where>${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m-%d')
        </if>
        <if test = 'params.timeStatType == "月"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m') ${params.xColumn}, sum(${params.yColumn}) total FROM kaoyanziliao
                <where>${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m')
        </if>
        <if test = 'params.timeStatType == "年"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y') ${params.xColumn}, sum(${params.yColumn}) total FROM kaoyanziliao
                <where>${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y')
        </if>
    </select>

    <select id="selectGroup" resultType="map" >
        SELECT ${params.column} , count(1) total FROM kaoyanziliao
        <where>${ew.sqlSegment}</where>
        group by ${params.column}
        limit 10
    </select>



</mapper>
